{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.rest.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "ts-node ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "cli": "node ./dist/main.cli.js",
    "ts": "ts-node",
    "cli:dev": "ts-node src/main.cli.ts",
    "cli:dev-generate-mocks": "ts-node src/main.cli.ts --generate 20 mocks/offers-mocks.tsv http://localhost:3123/api",
    "cli:dev-import-mocks": "ts-node src/main.cli.ts --import mocks/offers-mocks.tsv",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "^6.1.4",
    "@types/convict-format-with-validator": "^6.0.3",
    "@types/node": "^18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.3",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "5.2.2"
  },
  "prettier": {
    "editorconfig": true,
    "singleQuote": true,
    "bracketSameLine": true
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.6.0",
    "axios": "^1.5.0",
    "chalk": "^5.3.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "inversify": "^6.0.1",
    "mongoose": "^7.6.1",
    "pino": "^8.15.6",
    "reflect-metadata": "^0.1.13"
  }
}
